<%= form_for @post, :html => { class: "form-horizontal", role: "form" } do |f| %>

  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |message| %>
      <%= js add_gritter(message, title: 'Notification', sticky: false, time: 3000) %>
    <% end %>
  <% end %>

  <%= f.label :date, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.date_field :date, class: "form-control" %>
    <br>
  </div>

  <%= f.label :rationale, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_area :rationale, class: "form-control" %>
    <br>
  </div>

  <%= render partial: 'status', locals: { f: f } if current_user.type == 'AdminUser' %>

  <%= f.submit 'Save', class: 'btn btn-primary' %>
    

<% end %>
